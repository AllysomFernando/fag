Algoritmo "inverterVariavel"

Var
   a, b, temp: inteiro

Inicio
   escreva("Valor de A: ")
   leia(a)
   escreva("Valor de B: ")
   leia(b)
   
   // invertendo positivo p/ negativo
   a <- a * -1
   b <- b * -1
   
   escreval()
   escreval("Valores invertidos:")
   escreval("A:",a)
   escreval("B:",b)

   // tirando a inversão anterior de negativo p/ positivo
   temp <- a * -1
   a <- b * -1
   b <- temp

   escreval()
   escreval("Valores das variáveis invertidos:")
   escreval("A:",a)
   escreval("B:",b)

Fimalgoritmo
