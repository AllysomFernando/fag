Algoritmo "converterIdade"

Var
   idade, meses, horas: inteiro

Inicio
      escreva("Inforrme sua idade: ")
      leia(idade)
      
      meses <- idade * 12
      horas <- idade * 365 * 24
      
      escreval()
      escreval("Idade em meses:",meses," meses.")
      escreval("Idade em horas:",horas,"hrs.")

Fimalgoritmo